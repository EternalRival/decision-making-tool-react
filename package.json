{
  "name": "decision-making-tool",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "ci:lint": "eslint --max-warnings 0 --no-warn-ignored",
    "lint": "eslint --max-warnings 0 .",
    "lint:fsd": "steiger ./src --watch",
    "ci:format": "prettier -cu",
    "format": "prettier -luw src",
    "ci:stylelint": "stylelint --mw 0 --fix",
    "stylelint": "stylelint --mw 0 --fix src/**/*.css",
    "fix": "npm run format && npm run lint && npm run stylelint",
    "prepare": "husky"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.5.1",
    "clsx": "^2.1.1",
    "modern-normalize": "^3.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-redux": "^9.2.0",
    "react-router": "^7.1.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@eternalrival/prettier-config": "^0.1.5",
    "@eternalrival/stylelint-config": "^0.1.2",
    "@feature-sliced/cli": "^1.0.0",
    "@stylistic/eslint-plugin": "^3.1.0",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^9.20.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "eslint-plugin-unicorn": "^56.0.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.1",
    "steiger": "^0.5.5",
    "stylelint": "^16.14.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0"
  }
}
